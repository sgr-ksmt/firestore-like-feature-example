{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["dom", "es7", "es2017"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
